<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.juancarlos.dh_dollarhound_app.RatingActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ratingBox_Title"
        android:textColor="@color/colorText"
        android:textSize="@dimen/rating_Activity_Title_size"
        tools:text="Califica y comenta." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/input_ratingTitle"
        tools:text="TÃ­tulo"
        android:layout_below="@+id/ratingBox_Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorText"
        android:layout_marginTop="26dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/input_ratingNumber"
        android:layout_below="@+id/input_ratingTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/input_ratingNumber"
        android:layout_marginTop="13dp"
        android:id="@+id/input_ratingComment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorText"
        android:text="Contenido (opcional)"
        android:layout_above="@+id/input_confirmRating" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_confirmRating"
        tools:text="ENVIAR"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/input_ratingTitle"
        android:layout_alignEnd="@+id/input_ratingTitle" />
</RelativeLayout>
